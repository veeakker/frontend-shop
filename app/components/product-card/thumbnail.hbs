{{!-- Note: the width and height are explicitly fetched from the component.  Report if design changes. --}}
{{#if (and this.imageUrl @large)}}
  <img
    class="product-image"
    src={{this.imageUrl}}
    srcset={{concat this.imageUrl " 244w, " this.largeImageUrl " 500w, " this.doubleLargeImageUrl " 1000w"}}
    this alt="Detail picture of product" />
{{/if}}
{{#if (and this.imageUrl (not @large))}}
  <img
    src={{this.imageUrl}}
    class="product-image"
    alt="Detail picture of product">
{{/if}}
{{#if (not this.imageUrl)}}
  <img src="/images/meat-image.jpg" class="product-image" alt="Placeholder of shown product">
{{/if}}