<LeafletMap class="leaflet-map" @lat={{this.baseLat}} @lng={{this.baseLng}} @zoom={{this.baseZoom}} ...attributes as |map|>
  <map.tile @url="https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png" />
  {{#each @places as |deliveryPlace|}}
    <DeliveryLocationsMap::LocationMarker @place={{deliveryPlace}} @mapMarker={{map.marker}} as |marker deliveryPlace|>
      {{yield marker deliveryPlace}}
    </DeliveryLocationsMap::LocationMarker>
  {{/each}}
</LeafletMap>
