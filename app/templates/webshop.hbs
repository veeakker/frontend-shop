  <div class="scrollable-header menu-header">
    {{#each this.sortedProductGroups as |productGroup|}}
      <LinkTo @route="webshop.product-groups.show" @model={{productGroup}}>{{productGroup.label}}</LinkTo>
    {{/each}}
  </div>
