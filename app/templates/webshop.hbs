      {{else}}
        <LinkTo @route="webshop.login">Log in</LinkTo>
      {{/if}}
      {{!-- TODO: create single page help --}} <LinkTo @route="webshop.help">Help</LinkTo>
      
      <LinkTo @route="webshop.basket">
        {{#if this.basket.orderLines.length}}
          {{this.basket.orderLines.length}}
        {{/if}}
