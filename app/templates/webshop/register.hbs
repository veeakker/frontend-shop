{{outlet}}
<div class="login">
  <div class="checkout-contact">
    <div class="contact-info">

      <h1 class="tab-title">Registreer</h1>

      <Design::Forks @useDarkImage={{true}}/>

      <br>

      <div class="error-message">
        {{#if this.error }}
          {{ this.error }}
        {{/if}}
      </div>
        <Input placeholder="Voornaam" @type="text" @value={{this.firstName}} required />
        <Input required placeholder="Naam" @type="text"  @value={{this.lastName}} required />
        <Input required placeholder="E-mail" @type="email" @value={{this.email}} required />
        <Input required placeholder="Wachtwoord" @type="password"  @value={{this.password}} required />
        <br>
        <Input required placeholder="Adres" @type="text"  @value={{this.address}} required />
        <Input required placeholder="Postcode" @type="text"  @value={{this.postalCode}} required />
        <Input required placeholder="Provincie" @type="text"  @value={{this.locality}} required />
        <Input required placeholder="Country" @type="text"  @value={{this.country}} disabled/>
      <div class="button-product-cart" {{ on 'click' this.register }}><a href="#">Registreer</a></div>
      <div class="button-product-cart"><LinkTo @route="webshop.login">Inloggen</LinkTo></div>
    </div>
  </div>
</div>
{{outlet}}
