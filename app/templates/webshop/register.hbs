{{outlet}}
<div class="login">
  <div class="checkout-contact">
    <div class="contact-info">

      <h1 class="tab-title">Registreer</h1>

      <Design::Forks @useDarkImage={{true}}/>

      <br>

      <div class="error-message">
        {{#if this.error }}
          {{ this.error }}
        {{/if}}
      </div>
      <Input placeholder="Voornaam" @type="text" @value={{this.firstName}}/>
      <Input placeholder="Naam" @type="text"  @value={{this.lastName}}/>
      <Input placeholder="E-mail" @type="email" @value={{this.email}}/>
      <Input placeholder="Wachtwoord" @type="password"  @value={{this.password}}/>
      <br>
      <Input placeholder="Adres" @type="text"  @value={{this.address}}/>
      <Input placeholder="Postcode" @type="text"  @value={{this.postalCode}}/>
      <Input placeholder="Provincie" @type="text"  @value={{this.locality}}/>
      <Input placeholder="Country" @type="text"  @value={{this.country}} disabled/>

      <div class="button-product-cart" {{ on 'click' this.register }}><a href="#">Registreer</a></div>
      <div class="button-product-cart"><LinkTo @route="webshop.login">Inloggen</LinkTo></div>
    </div>
  </div>
</div>
{{outlet}}
