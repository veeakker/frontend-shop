{{page-title "Index"}}

<div class="textbook">
  <p>
    <table>
      <thead>
        <tr>
          <th>Status gewijzigd op</th><th>Status</th><th>Link naar mandje</th>
        </tr>
      </thead>
      <tbody>
        {{#each @model as |basket|}}
          <tr>
            <td>{{locale-date basket.statusChangedAt}}</td>
            <td>
              {{#if (eq basket.orderStatus this.CONFIRMED)}}
                bevestigd
              {{else if (eq basket.orderStatus this.DRAFT)}}
                ontwerp
              {{/if}}
            </td>
            <td>
              {{#if (eq basket.orderStatus this.CONFIRMED)}}
                {{!-- TODO: make custom page for showing old basket --}}
                <LinkTo @route="webshop.baskets.show" @model={{basket}}>
                  Toon mandje
                </LinkTo>
              {{/if}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </p>
</div>


{{outlet}}